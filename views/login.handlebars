<section class="row" style="padding: 20px;">
    <div id="login-form" class="card col" style="margin: 10px;">
        <div class="card-body">
            <h3 class="text-center">Login</h3>
            <form>
                <div class="mb-3">
                    <label for="login-email" class="form-label">Email</label>
                    <input id="login-name" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="login-pass" class="form-label">Password</label>
                    <input id="login-pass" type="password" class="form-control">
                </div>
                <button id="login-submit-btn" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div id="signup-form" class="card col" style="margin: 10px;">
        <div class="card-body">
            <h3 class="text-center">Sign Up</h3>
            <form>
                <div class="mb-3">
                    <label for="signup-name" class="form-label">Username</label>
                    <input id="signup-name" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="signup-email" class="form-label">Email</label>
                    <input id="signup-email" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="signup-pass" class="form-label">Password</label>
                    <input id="signup-pass" type="password" class="form-control">
                </div>
                <button id="signup-submit-btn" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>

<script src="../public/js/login.js"></script>